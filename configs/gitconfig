[user]
  name = Your Name
  email = your@email
[core]
  autocrlf = input
  excludesfile = ~/.gitignore_global
[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
[alias]
  st = status
  gca = gc --aggressive
  prb = pull --rebase
  lg = log --graph -n 10 --abbrev-commit --date=relative --pretty=format:'%h -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %Cblue<%an>%Creset'
  rprune = remote update --prune
[push]
  default = simple
